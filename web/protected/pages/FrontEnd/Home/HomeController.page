<com:TContent ID="MainContent">
    <com:Application.controls.AccordinMenu.AccordinMenuJs />
    <div class="pageWrapper">
        <span class="left sidebar inlineblock">
            <div ID="menu-accordion" class="sidebarmodule">
                <h3 class="sidebarmoduletitle">Categories</h3>
                <div id="catelist" class="sidebarmodulecontent">
		            <%= $this->getCategories() %>
		            <br style="clear: left" />
                </div>
            </div>
        </span>
        <span class="maincontent inlineblock">
            <div class="controlbtns">
                <span class="inlineblock" style="width: 50%;">
	                <input type="textbox" class="padding5 fullwith rdcrnr" placeholder="Search Your Books Here.." />
                </span>
                <span class="inlineblock" style="width: 20%">
	                <input type="button" class="button rdcrnr" value="Search"/>
                </span>
                <span class="inlineblock productlistviewbtns">
                    <ul class="btn-group">
		                <li class="rdcrnrfirst grid button active"><span class="icon"></span><span class="title">Grid</span></li>
		                <li class="rdcrnrlast list button"><span class="icon"></span><span class="title">List</span></li>
                    </ul>
                </span>
            </div>
            <div id="productlist" ><img src="/themes/default/images/loading.gif" /></div>
        </span>
    </div>
</com:TContent>